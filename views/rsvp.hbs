<div id="fh5co-wrapper">
	<div id="fh5co-page">

		<div class="fh5co-hero" data-section="home">
			<div class="fh5co-overlay"></div>
			<div class="fh5co-cover text-center">
				<div class="display-t">
					<div class="display-tc">
						<div class="container">
							<div class="col-md-10 col-md-offset-1">
								<div class="animate-box">
									<h1>Kel & Gui</h1>
									<h2>RSVP</h2>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	<header id="fh5co-header-section" class="sticky-banner">
			<div class="container">
				<div class="nav-header">
					<a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle dark"><i></i></a>
					<h1 id="fh5co-logo"><a href="/index">Kel & Gui</a></h1>
					<!-- START #fh5co-menu-wrap -->
					<nav id="fh5co-menu-wrap" role="navigation">
						<ul class="sf-menu" id="fh5co-primary-menu">
							<li><a href="/index">Home</a></li>
							<li><a href="/when-where">Onde &amp; Quando</a></li>
							<li><a href="/gifts">Lista de Presentes</a></li>
							<li class="active"><a href="/RSVP">RSVP</a></li>
							<li><a href="/gallery">Fotos</a></li>

						</ul>
					</nav>
				</div>
			</div>
		</header>

		<!-- end:header-top -->


		<div id="fh5co-guest" class="row row-form">
			<form method="POST" id="form-rsvp">
				<div id="form-input">
					<div class="form-group form-g">
						<input type="text" class="form-control" id="input-name" placeholder="Digite Seu Nome" name="names"
							required />
					</div>
					<div class="row-images">
						<button class="row-images btn-search btn btn-primary" type="submit">Buscar</button>
					</div>
				</div>
			</form>


			<div class="container">
				{{#if have_register}}
				<table class="table">
					<thead>
						<tr>
							<th scope="col">
								<div class="row-tables">
									Convidados
								</div>
							</th>
							<th scope="col">
								<div class="row-tables">
									Tipo de Convite
								</div>
							</th>
							<th scope="col">
								<div class="row-tables">
									Confirmar
								</div>
							</th>
						</tr>
					</thead>
					<tbody>
						{{#each users}}
						{{> eachuser}}
						{{/each}}
					</tbody>
				</table>
				<div class="row row-images">
					<h1>
						Qualquer dúvida, entre em contato com os noivos.
					</h1>
				</div>
				{{else}}
				<h1>
					Nao há registros para este nome, tente novamente ou entre em contato com os noivos.
				</h1>
				{{/if}}
			</div>

		</div>






	</div>
	<!-- END fh5co-page -->

</div>
<!-- END fh5co-wrapper -->

